<Window x:Class="Laboratory4.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratory4" xmlns:vm="clr-namespace:Laboratory4.ViewModels"
        mc:Ignorable="d"
        Title="Toy Store" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <DockPanel>
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Add Toy" Command="{Binding AddToyCommand}" />
            <Button Content="Add Batch" Command="{Binding AddBatchCommand}" />
            <Button Content="Sell One" Command="{Binding SellOneCommand}" CommandParameter="{Binding SelectedItem, ElementName=dgBatches}" />
        </ToolBar>
        <DataGrid x:Name="dgBatches"
                  ItemsSource="{Binding Batches}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Toy" Binding="{Binding Toy.Name}" />
                <DataGridTextColumn Header="Class" Binding="{Binding Toy.Classification}" />
                <DataGridTextColumn Header="Delivery Date" Binding="{Binding DeliveryDate, StringFormat=d}" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" />
            </DataGrid.Columns>
        </DataGrid>
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding StoreStatus}" />
        </StatusBar>
    </DockPanel>
</Window>